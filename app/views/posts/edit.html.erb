<div class="container">
	<br/><br/>
<%= form_for [@post] do |f| %>
  <div class="form-group">
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <%= f.label :comedian_id %><br/>
    <%= f.collection_select :comedian_id, @comedians, :id, :name, include_blank: "Please select" %>

 </div>
  <%= f.submit 'Submit', :class => "btn btn-success" %>
<% end %>

<br/>
<%= link_to "Delete Post", post_path(@post), :method => 'delete', confirm: 'Are you sure?' %>

</div>
