<div class="container">
  <%= form_for [@comedian] do |f| %>
     <div class="form-group">
       <%= f.label :name %><br/>
       <%= f.text_field :name %>
    </div>

    <%= f.submit 'Submit', :class => "btn btn-success" %>
  <% end %>

  <%= link_to "Delete Comedian", comedian_path(@comedian), :method => 'delete', confirm: 'Are you sure?' %>

</div>