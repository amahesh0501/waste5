<div class="page-container">
  <%= render 'layouts/sidebar' %>
  <div id="page-wrapper">
   <div class="row">
    <h3 class="table_page_header">Viewing videos from <%=@comedian.name%></h3>
    <br/>
      <table class="table table-striped">
        <% @posts.each do |post| %>
            <tr>
              <td><%= link_to image_tag(post.image_url, height: '100', width: '100'), post_path(post)  %></td>
              <td><%= link_to post.title, post_path(post) %></td>
              <td><%= link_to "#{post.duration/60} min.", post_path(post) %></td>
            </tr>
        <% end %>
        <% if @posts.length == 0 %>
          <p>Sorry, this comedian has no videos</p>
        <% end %>
      </table>
    </div>
  </div>
</div>










